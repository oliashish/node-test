pipeline {
    agent {
        docker {
            image 'node:14' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('test') {
			when{
				 changeRequest branch: "develop"
			}
            steps {
                echo 'Testing..'
				sh 'npm install'
            }
        }
        stage('build') {
            steps {
                echo 'Building..'
				sh 'npm install'
            }
        }
        stage('deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
